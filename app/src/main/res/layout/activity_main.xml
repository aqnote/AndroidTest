<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="@string/main_activity" />

    <RelativeLayout
        android:id="@+id/android_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4" >

        <Button
            android:id="@+id/android_about_activity_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="displayAboutActivity"
            android:text="@string/about_activity"
            android:width="200dp" />

        <Button
            android:id="@+id/android_test_activity_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/android_about_activity_b"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="displayTestActivity"
            android:text="@string/test_activity"
            android:width="200dp" />

        <Button
            android:id="@+id/android_log_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/android_test_activity_b"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="displayLog"
            android:text="log"
            android:width="200dp" />

        <Button
            android:id="@+id/android_exit_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/android_log_b"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="exit"
            android:text="exit"
            android:width="200dp" />

        <EditText
            android:id="@+id/android_log_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/android_exit_b"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:height="100dp"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

</LinearLayout>
